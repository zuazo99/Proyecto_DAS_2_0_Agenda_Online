<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardUseCompatPadding="true"
    android:padding="0.2dp"
    app:cardCornerRadius="10dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <!--Uid de nota-->
        <TextView
            android:id="@+id/Id_Nota_Item"
            android:text="@string/Id_Nota_Item"
            android:visibility="gone"
            android:fontFamily="@font/opensansbold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!--Uid de usuario-->
        <TextView
            android:id="@+id/Uid_Usuario_Item"
            android:text="@string/Uid_Usuario_Item"
            android:visibility="gone"
            android:fontFamily="@font/opensansbold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!--Correo de usuario-->
        <TextView
            android:id="@+id/Correo_Usuario_Item"
            android:text="@string/Correo_Usuario_Item"
            android:visibility="gone"
            android:fontFamily="@font/opensansbold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!--Fecha y hora de registro-->
        <TextView
            android:id="@+id/Fecha_Hora_registro_Item"
            android:text="@string/Fecha_Hora_registro_Item"
            android:visibility="gone"
            android:fontFamily="@font/opensansbold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!--Titulo de la nota-->
        <TextView
            android:id="@+id/Titulo_Nota_Item"
            android:text="@string/Titulo_Nota_Item"
            android:textSize="25sp"
            android:fontFamily="@font/opensansbold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!--DescripciÃ³n de la nota-->
        <TextView
            android:id="@+id/Descripcion_Item"
            android:text="@string/Descripcion_Item"
            android:textSize="18sp"
            android:fontFamily="@font/opensansbold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!--Fecha de la nota-->
        <TextView
            android:id="@+id/Fecha_Item"
            android:text="@string/Fecha_Item"
            android:textSize="18sp"
            android:fontFamily="@font/opensansbold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!--Estado de la nota-->
        <TextView
            android:id="@+id/Estado_Item"
            android:text="@string/Estado_Item"
            android:visibility="gone"
            android:fontFamily="@font/opensansbold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>